            string FilePath = @"N:\0 A Level Comp\Random\c#\Coding Tasks";
            //CreateFile(FilePath, "Hurn");
            //WriteToFile(FilePath + @"\Hurn.txt", Test);
            FindNumbers(FilePath + @"\Num.txt");
