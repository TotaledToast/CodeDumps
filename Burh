namespace FIle_Saving
{
    class Program
    {
        static void Main(string[] args)
        {
            List<string> Test = new List<string>
                {
                "Hi There", "How are You?"
            };
            List<string> Letters = new List<string>
            {
                "a", "e", "i", "o", "u"
